
@{
    ViewBag.Title = "SetPassword";
    Layout = "~/Views/Shared/_Account.cshtml";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-5">
        <div class="card-body">

            <p class="login-card-description" style="color:black">Verify Email</p>
            <form action="~/EmployeeManager/SetPassword" method="post">
                <div class="form-group">
                    <label for="email" class="sr-only">Email</label>
                    <input type="text" readonly name="Email" id="Email" class="form-control" value="@ViewBag.email">
                </div>
                <div class="form-group mb-4">
                    <label for="password" class="sr-only">Password</label>
                    <input type="password" name="Password" id="Password" class="form-control" value="" placeholder="***********">
                </div>
                <input name="login" id="login" class="btn btn-success" type="submit" value="Verify Me">
            </form>

        </div>
    </div>
    <div class="col-md-3">

    </div>
</div>